{
  "name": "pri-search-results",
  "version": "1.0.0",
  "description": "PRI (Principles for Responsible Investment) Search Results Page",
  "main": "index.html",
  "scripts": {
    "start": "gulp",
    "build": "gulp run",
    "watch": "gulp watch",
    "sass": "gulp sass",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:js": "eslint scripts/**/*.js",
    "lint:scss": "stylelint 'styles/sass/**/*.scss'",
    "lint": "npm run lint:js && npm run lint:scss",
    "format": "prettier --write 'scripts/**/*.js' 'styles/sass/**/*.scss' '*.html'"
  },
  "keywords": [
    "PRI",
    "search",
    "sustainability",
    "ESG"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^5.1.0",
    "gulp-uglifycss": "^1.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "scripts/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
